model Backlog {
    id          Int               @id
    summary     String
    type        BacklogType?
    sprint      Sprint?           @relation(fields: [sprintId], references: [id])
    sprintId    Int?
    priority    BacklogPriority?
    reporter    User              @relation("reportedBacklogs", fields: [reporterId], references: [id])
    reporterId  Int
    assignee    User?             @relation("assignedBacklogs", fields: [assigneeId], references: [id])
    assigneeId  Int?
    points      Int?
    description String?
    project     Project           @relation(fields: [projectId], references: [id])
    projectId   Int
}

model Sprint {
    id          Int
    backlogs    Backlog[]
}

enum BacklogType {
    STORY
    TASK
    BUG
}

enum BacklogPriority {
    VERY_HIGH
    HIGH
    MEDIUM
    LOW
    VERY_LOW
}
